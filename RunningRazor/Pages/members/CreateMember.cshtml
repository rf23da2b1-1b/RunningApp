@page
@model RunningRazor.Pages.members.CreateMemberModel
@{
    ViewData["Title"] = "Opret et medlem";
}
<div class="container">
    <div class="col">
        <div class="row">
            <h1 class="jumbotron">Opret et nyt medlem i løb for livet</h1>

            <p>&nbsp;</p>
            <form method="post">
                <div class="col-6">
                    <div class="row">

                        <div class="form-group>">
                            <label>Navn</label><br />
                            <input type="text" class="form-control" asp-for="@Model.NewName" /><br />
                            <span asp-validation-for="@Model.NewName" class="text-danger"></span><br />
                            <br />

                            <label>Mobil</label><br />
                            <input type="text" class="form-control" asp-for="@Model.NewMobile" /><br />
                            <span asp-validation-for="@Model.NewMobile" class="text-danger"></span><br />
                            <br />

                            <label>Pris</label><br />
                            <input type="number" class="form-control" asp-for="@Model.NewPrice" /><br />
                            <span asp-validation-for="@Model.NewPrice" class="text-danger"></span><br />
                            <br />

                            <label>Løbe Team</label><br />
                            <select asp-for="@Model.NewTeam">
                                @foreach(var t in Model.Teams)
                                {
                                    <option name="@t" value="@t" >@t.ToString()</option>
                                }
                            </select>


                            <span asp-validation-for="@Model.NewTeam" class="text-danger"></span><br />

                            <br /><br /><br />
                            <input type="submit" value="Opret" class="btn btn-success" />&nbsp;&nbsp;&nbsp;
                            <input type="submit" value="Fortryd" asp-page="Index" class="btn btn-danger" />
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

