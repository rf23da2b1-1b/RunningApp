@page
@model RunningRazor.Pages.members.DetailedMemberModel
@{
    ViewData["Title"] = "Information om et Medlem";
}
<div class="container">
    <div class="col">
        <div class="row">
            <h1 class="jumbotron">Medlems data <strong>løb for livet</strong></h1>

            <p>&nbsp;</p>
            @if (!Model.IsEdit)
            {
                <form method="post">
                    <strong>
                        <label>Navn:&nbsp; @Model.MemberData.Name</label><br />

                        <label>Id:&nbsp;&nbsp;&nbsp; @Model.MemberData.Id</label><br />
                        <label>Mobil: @Model.MemberData.Mobile</label><br />
                        <label>Team:&nbsp; @Model.MemberData.Team</label><br />
                        <label>Pris:&nbsp; @Model.MemberData.Price</label><br />
                    </strong>
                    <p>&nbsp;</p>
                    <p>&nbsp;</p>
                    <div class="row">
                        <div class="col-3">
                        </div>
                    </div>
                    <input type="submit" value="Tilbage" asp-page="Index" class="btn btn-secondary" />
                    &nbsp;&nbsp;
                    <input type="submit" value="Vil gerne ændre" asp-route-id="@Model.MemberData.Id" class="btn btn-success" />
                </form>

            }
            else
            {
                <form method="post">
                    <div class="col-6">
                        <div class="row">
                            <h1>Medlemmet </h1>
                            <p>&nbsp;</p>
                            <strong>
                                <label>Id</label><br />
                                <input type="hidden" class="form-control" asp-for="@Model.NewId" /><br />
                                <span asp-validation-for="@Model.NewName" class="text-danger"></span><br />
                                <br />

                                <label>Navn</label><br />
                                <input type="text" class="form-control" asp-for="@Model.NewName" /><br />
                                <span asp-validation-for="@Model.NewName" class="text-danger"></span><br />
                                <br />

                                <label>Mobil</label><br />
                                <input type="text" class="form-control" asp-for="@Model.NewMobile" /><br />
                                <span asp-validation-for="@Model.NewMobile" class="text-danger"></span><br />
                                <br />

                                <label>Pris</label><br />
                                <input type="number" class="form-control" asp-for="@Model.NewPrice" /><br />
                                <span asp-validation-for="@Model.NewPrice" class="text-danger"></span><br />
                                <br />

                                <label>Løbe Team</label><br />
                                <select asp-for="@Model.NewTeam">
                                    @foreach (var t in Model.Teams)
                                    {
                                        <option name="@t" value="@t">@t.ToString()</option>
                                    }
                                </select>


                                <span asp-validation-for="@Model.NewTeam" class="text-danger"></span><br />
                            </strong>
                        </div>
                    </div>
                    <p>&nbsp;</p>
                    <p>&nbsp;</p>
                    <div class="row">
                        <div class="col-3">
                            <input type="submit" value="Bekræft" asp-page-handler="OK" asp-route-id="@Model.MemberData.Id" class="btn btn-warning" />
                            &nbsp;&nbsp;
                            <input type="submit" value="Fortryd (tilbage)" asp-page="Index" class="btn btn-success" />

                        </div>
                    </div>
                </form>

            }
        </div>
    </div>
</div>